{
  "buttons": [
    {
      "id": "race_invite",
      "label": "Race Invite",
      "type": "primary",
      "script": "start-process.ahk",
      "args": ["Content Manager.exe acmanager://race/online/join?ip={server_ip}&httpPort={server_port}&plainPassword={server_password}", "", "A_MyDocuments"],
      "requires_server": true
    },
    {
      "id": "accept_invite",
      "label": "Accept Invite",
      "type": "primary",
      "script": "send-keystroke.ahk",
      "args": ["Content Manager.exe", "^g"],
      "requires_server": false
    },
    {
      "id": "racing_line",
      "label": "Racing Line",
      "type": "secondary",
      "script": "send-keystroke.ahk",
      "args": ["acs.exe", "^i"],
      "requires_server": false
    },
    {
      "id": "transmission",
      "label": "Auto/Manual",
      "type": "secondary",
      "script": "send-keystroke.ahk",
      "args": ["acs.exe", "^g"],
      "requires_server": false
    },
      {
      "id": "full_screen",
      "label": "Fullscreen",
      "type": "secondary",
      "script": "send-keystroke.ahk",
      "args": ["acs.exe", "!{enter}"],
      "requires_server": false
    },
    {
      "id": "stop_assetto",
      "label": "Stop Assetto",
      "type": "danger",
      "script": "send-keystroke.ahk",
      "args": ["acs.exe", "!{f4}"],
      "requires_server": false
    }
  ]
}